<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                           xmlns:app="http://schemas.android.com/apk/res-auto"
                                           xmlns:tools="http://schemas.android.com/tools"
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           tools:context=".ui.rgb.RGBFragment"
                                           tools:showIn="@layout/activity_rgb">




        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            <TextView
                    android:id="@+id/udpIpAddressTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="IP Address"
                    app:layout_constraintBottom_toBottomOf="@+id/udpIpAddressEditText"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/udpIpAddressEditText"/>

            <EditText
                    android:id="@+id/udpIpAddressEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:hint="192.168.x.x"
                    android:text="192.168.5.105"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/udpIpAddressTextView"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/udpPortTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Port"
                    app:layout_constraintBottom_toBottomOf="@+id/udpPortEditText"
                    app:layout_constraintStart_toStartOf="@+id/udpIpAddressTextView"
                    app:layout_constraintTop_toTopOf="@+id/udpPortEditText"/>

            <EditText
                    android:id="@+id/udpPortEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:ems="10"
                    android:hint="xxxxx"
                    android:text="4000"
                    android:inputType="numberDecimal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/udpIpAddressEditText"
                    app:layout_constraintStart_toStartOf="@+id/udpIpAddressEditText"/>

            <Switch
                    android:id="@+id/toggleConnectionButton"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/textView"
                    android:layout_marginStart="8dp"
                    app:layout_constraintHorizontal_bias="0.966"
                    android:switchMinWidth="80dp"
                    android:textOn="on"
                    android:textOff="off"
                    android:switchPadding="19dp"
                    android:showText="false"
                    app:layout_constraintTop_toBottomOf="@+id/udpPortEditText"/>

            <SeekBar
                    android:id="@+id/redSeekBar"
                    android:layout_width="363dp"
                    android:layout_height="@dimen/rgbSeekBarWitdh"
                    android:max="255"
                    android:progress="128"
                    android:progressTint="@color/red"
                    android:thumbTint="@color/red"
                    app:layout_constraintEnd_toEndOf="@+id/udpPortEditText"
                    app:layout_constraintStart_toStartOf="@+id/textView"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/toggleConnectionButton"

                    />

            <SeekBar
                    android:id="@+id/greenSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/rgbSeekBarWitdh"
                    android:layout_marginTop="8dp"
                    android:max="255"
                    android:progress="128"
                    android:progressTint="@color/green"
                    android:thumbTint="@color/green"
                    app:layout_constraintEnd_toEndOf="@+id/redSeekBar"

                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@+id/redSeekBar"
                    app:layout_constraintTop_toBottomOf="@+id/redSeekBar"/>

            <SeekBar
                    android:id="@+id/blueSeekBar"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/rgbSeekBarWitdh"
                    android:layout_marginTop="8dp"
                    android:max="255"
                    android:progress="128"
                    android:progressTint="@color/blue"
                    android:thumbTint="@color/blue"
                    app:layout_constraintEnd_toEndOf="@+id/greenSeekBar"

                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/greenSeekBar"
                    app:layout_constraintTop_toBottomOf="@+id/greenSeekBar"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintGuide_begin="39dp"/>

            <TextView
                    android:text="Send Color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    app:layout_constraintStart_toStartOf="@+id/udpPortTextView"
                    app:layout_constraintTop_toTopOf="@+id/toggleConnectionButton"
                    app:layout_constraintBottom_toBottomOf="@+id/toggleConnectionButton"
                    app:layout_constraintVertical_bias="0.482"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/divider"
                    tools:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@+id/blueSeekBar"
                    android:layout_marginStart="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"/>



        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            app:srcCompat="@drawable/ic_add_24px"
            />

</androidx.coordinatorlayout.widget.CoordinatorLayout>