<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/activity_rgb"
        tools:context=".ui.main.RGBActivityFragment">

    <SeekBar
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:id="@+id/seekBarRed" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:progressTint="@color/red"
            android:thumbTint="@color/red"


    />
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:id="@+id/seekBarRed3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:progressTint="@color/green"
            android:thumbTint="@color/green"

            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/seekBarRed2"/>
    <SeekBar
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:id="@+id/seekBarRed2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:progressTint="@color/blue"
            android:thumbTint="@color/blue"

            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/seekBarRed"/>
</android.support.constraint.ConstraintLayout>